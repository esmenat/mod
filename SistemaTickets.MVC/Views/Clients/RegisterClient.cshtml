@{

    ViewData["Title"] = "Client Registration";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="Register">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>
    <div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" required />
    </div>
    <div class="mb-3">
        <label for="ConfirmPassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required />
    </div>
    <button type="submit" class="btn register-btn">Register</button> <!-- Usando la clase register-btn -->
</form>


<!-- Mostrar los errores globales si hay alguno -->
@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger mt-2">
        <strong>@ViewData.ModelState[""].Errors[0].ErrorMessage</strong>
    </div>
}

